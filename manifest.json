{
  "manifest_version": 3,
  "name": "NSFW Guardian for X",
  "version": "2.0.0",
  "description": "X(Twitter)上の不適切な画像を自動的にブロックします",
  "permissions": [
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://pbs.twimg.com/*",
    "https://abs-0.twimg.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "models/*",
        "offscreen.html"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "chrome-extension://*/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
  }
}